<%= form_with model: @user do |form| %>
<div>
    <%= form.label :email %><br>
    <%= form.email_field :email, :value => 'test' %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
    <div><%= message %></div>
    <% end %>
</div>
<div>
    <%= form.label :username %><br>
    <%= form.text_field :username,  placeholder: 'Username'%>
    <% @user.errors.full_messages_for(:username).each do |message| %>
    <div><%= message %></div>
    <% end %>
</div>
    <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, placeholder: 'Shhh, keep it secret!' %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
    <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.submit %>
</div>

<% end %>